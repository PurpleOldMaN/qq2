void firstCommunity()
{

    cout << "\t\t\t\t\tFirst Community Credit Union\n\n\n" << endl;
    cout << "\n1). Tweak balance for selected user\n" << endl;
    cout << "2). Remove a user\n" << endl;
    cout << "3). Add a user\n" << endl;
    cout << "4). Create a account hold for selected user\n" << endl;
    cout << "5). Exit" << endl;
    cin >> firstCommunityInput;

    if (firstCommunityInput == 1)
    {
        system("CLS");
        cout << "Please enter the account ID and password for the user" << endl;
        cout << "ID:";
        cin >> firstCID;
        cout << " " << endl;
        cin.get();
        cin >> firstCPass;
        cout << " " << endl;
        cout << "Okay, finding " << firstCID << "\n" << endl;
        cout << "Found" << firstCID << "\n" << endl;
        cout << "Current balance: " << firstCbalance << endl;

    }

}



